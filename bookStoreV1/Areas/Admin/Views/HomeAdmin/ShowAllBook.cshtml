@using bookStoreV1.ViewModels
@model AdminAllBooks

@{
    ViewData["Title"] = "ShowAllBook";
}

<h1>ShowAllBook</h1>


<div class="Pannel">
    <div class="row">
        <form>
            <div class="col-sm-5 col-md-5">
                <input type="text" name="bookname" class="form-control" placeholder="Book Name" />
            </div>
            <div class="col-sm-5 col-md-5">
                <input type="text" name="author" class="form-control" placeholder="Author" />
            </div>
            <div class="col-sm-2 col-md-2">
                <button type="submit" class="btn btn-info">Find</button>
            </div>
            @*            <div class="col-sm-2 col-md-2">
            <button type="button" class="btn-success">
            <a asp-area="Admin" asp-controller="AdminHome" asp-action="CreateUser">
            Create New User
            </a>
            </button>
            </div>*@
@*            <button type="button">
                <a asp-area="Admin" asp-controller="AdminHome" asp-action="CreateSubject">
                    Create Subject
                </a>
            </button>*@
        </form>
    </div>
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Exist</th>
                <th>Time Crated</th>
                <th>Command</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model.Books)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>
                        @if (book.IsExist)
                        {
                            <p class="text-success">Active</p>
                        }
                        else
                        {
                            <p class="text-success">De Active</p>
                        }
                    </td>
                    <td>@book.Created</td>
                    <td>
                        <a asp-area="Admin" asp-controller="AdminHome" asp-action="" class="btn btn-warning btn-sm" asp-route-id="@book.MyBookId">
                            Edit
                        </a>
                        <a asp-area="Admin" asp-controller="AdminHome" asp-action="BookDelete" class="btn btn-danger btn-sm" asp-route-id="@book.MyBookId">
                            Delete
                        </a>
                    </td>
                    <td>
                        @book.Price
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


